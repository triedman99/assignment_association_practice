<%= form_for @post do |f| %>
  <%= f.label :title, 'Title' %>
  <%= f.text_field :title %>

  <%= f.label :body, 'Body' %>
  <%= f.text_field :body %>

  <%= f.collection_select(:category_id, Category.all, :id, :name) %>

  <%= f.select(:tag_ids, @tag_options, {include_blank: true}, multiple: true) %>

  <%= f.submit 'Edit Post' %>
<% end %>